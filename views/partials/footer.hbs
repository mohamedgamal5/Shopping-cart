<footer>
  <div class="position-absolute top-100 start-50 translate-middle">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <a
            class="page-link"
            href="/previous/{{noPage}}"
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each noPages}}
          <li class="page-item"><a
              class="page-link"
              href="/page/{{this}}"
            >{{this}}</a></li>
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="/next/{{noPage}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</footer>